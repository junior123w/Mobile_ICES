<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/firstRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3">

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:paddingHorizontal="@dimen/px_10"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="60sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/thirdRow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstRow">


        <Button
            android:id="@+id/clearButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:backgroundTint="@android:color/darker_gray"
            android:fontFamily="@font/fa_solid_900"
            android:tag="clear"
            android:text="@string/clear"
            android:textSize="@dimen/buttonIconSize" />

        <Button
            android:id="@+id/percentButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:backgroundTint="@android:color/darker_gray"
            android:fontFamily="@font/fa_solid_900"
            android:tag="percent"
            android:text="@string/percentage"
            android:textSize="@dimen/buttonIconSize" />

        <Button
            android:id="@+id/backSpaceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:backgroundTint="@android:color/darker_gray"
            android:fontFamily="@font/fa_solid_900"
            android:tag="backSpace"
            android:text="@string/backSpace"
            android:textSize="@dimen/buttonIconSize" />

        <Button
            android:id="@+id/divideButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:backgroundTint="@color/operator_colour"
            android:fontFamily="@font/fa_solid_900"
            android:tag="divide"
            android:text="@string/divide"
            android:textSize="@dimen/buttonIconSize" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/thirdRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/fourthRow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondRow">

        <Button
            android:id="@+id/nineButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:backgroundTint="@color/number_colour"
            android:fontFamily="@font/fa_solid_900"
            android:tag="nine"
            android:text="@string/nine"
            android:textSize="@dimen/buttonIconSize" />

        <Button
            android:id="@+id/eightButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:backgroundTint="@color/number_colour"
            android:fontFamily="@font/fa_solid_900"
            android:tag="eight"
            android:text="@string/eight"
            android:textSize="@dimen/buttonIconSize" />

        <Button
            android:id="@+id/sevenButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:backgroundTint="@color/number_colour"
            android:fontFamily="@font/fa_solid_900"
            android:tag="seven"
            android:text="@string/seven"
            android:textSize="@dimen/buttonIconSize" />

        <Button
            android:id="@+id/multiplyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:backgroundTint="@color/operator_colour"
            android:fontFamily="@font/fa_solid_900"
            android:tag="multiply"
            android:text="@string/multiply"
            android:textSize="@dimen/buttonIconSize" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fourthRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/fifthRow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thirdRow">

        <Button
            android:id="@+id/sixButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:backgroundTint="@color/number_colour"
            android:fontFamily="@font/fa_solid_900"
            android:tag="six"
            android:text="@string/six"
            android:textSize="@dimen/buttonIconSize" />

        <Button
            android:id="@+id/fiveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:backgroundTint="@color/number_colour"
            android:fontFamily="@font/fa_solid_900"
            android:tag="five"
            android:text="@string/five"
            android:textSize="@dimen/buttonIconSize" />

        <Button
            android:id="@+id/fourButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:backgroundTint="@color/number_colour"
            android:fontFamily="@font/fa_solid_900"
            android:tag="four"
            android:text="@string/four"
            android:textSize="@dimen/buttonIconSize" />

        <Button
            android:id="@+id/subtractButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:backgroundTint="@color/operator_colour"
            android:fontFamily="@font/fa_solid_900"
            android:tag="subtraction"
            android:text="@string/subtract"
            android:textSize="@dimen/buttonIconSize" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fifthRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/sixthRow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fourthRow">

        <Button
            android:id="@+id/thirdButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:backgroundTint="@color/number_colour"
            android:fontFamily="@font/fa_solid_900"
            android:tag="three"
            android:text="@string/three"
            android:textSize="@dimen/buttonIconSize" />

        <Button
            android:id="@+id/twoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:backgroundTint="@color/number_colour"
            android:fontFamily="@font/fa_solid_900"
            android:tag="two"
            android:text="@string/two"
            android:textSize="@dimen/buttonIconSize" />

        <Button
            android:id="@+id/oneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:backgroundTint="@color/number_colour"
            android:fontFamily="@font/fa_solid_900"
            android:tag="one"
            android:text="@string/one"
            android:textSize="@dimen/buttonIconSize" />

        <Button
            android:id="@+id/addButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:backgroundTint="@color/operator_colour"
            android:fontFamily="@font/fa_solid_900"
            android:tag="addition"
            android:text="@string/add"
            android:textSize="@dimen/buttonIconSize" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sixthRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fifthRow">

        <Button
            android:id="@+id/plusMinusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:backgroundTint="@android:color/darker_gray"
            android:fontFamily="@font/fa_solid_900"
            android:tag="plusMinus"
            android:text="@string/plusMinus"
            android:textSize="@dimen/buttonIconSize" />

        <Button
            android:id="@+id/zeroButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:backgroundTint="@color/number_colour"
            android:fontFamily="@font/fa_solid_900"
            android:tag="zero"
            android:text="@string/zero"
            android:textSize="@dimen/buttonIconSize" />

        <Button
            android:id="@+id/decimalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:backgroundTint="@color/number_colour"
            android:fontFamily="@font/fa_solid_900"
            android:tag="decimal"
            android:text="."
            android:textSize="@dimen/buttonIconSize" />

        <Button
            android:id="@+id/equalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:backgroundTint="@color/operator_colour"
            android:fontFamily="@font/fa_solid_900"
            android:tag="equal"
            android:text="@string/equal"
            android:textSize="@dimen/buttonIconSize" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>